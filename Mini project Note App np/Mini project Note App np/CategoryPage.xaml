<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mini_project_Note_App_np.CategoryPage">

    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="30,0" VerticalOptions="Center">
            <StackLayout Orientation="Vertical" HorizontalOptions="Start">
                <ImageButton Source="backbutton.png"
                             Clicked="OnBackButtonClicked"
                             HeightRequest="50"
                             Margin="0,0,0,10" /> <!-- Margin added to the bottom for spacing -->
                <Label x:Name="CategoryName" Text="Your Title" FontSize="32" HorizontalOptions="Start" VerticalOptions="Center" />
            </StackLayout>
            <Button Text="+"
                    Clicked="NewNode"/>
            <Button Text="Navy Seals"
                    Clicked="OpenNode"/>
            <Button Text="Memes"
                    Clicked="OpenNode"/>
            <Button Text="top 5 gaming sites"
                    Clicked="OpenNode"/>
            <Button Text="buddy application"
                    Clicked="OpenNode"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
