            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

       

            <Button Text="School"
                Clicked="OnCategoryClicked"/>


            <Button Grid.Column="1"
                Text="hmm"
                Clicked="OnCategoryClicked"/>

            <Button Grid.Row="1"
                Text="(*_*)"
                Clicked="OnCategoryClicked"/>


            <Button Grid.Row="1"
                 Grid.Column="1"
                Text="Stuff I should remember"
                Clicked="OnCategoryClicked"/>


            <Button Grid.Row="2"
                Grid.ColumnSpan="2"
                Text="Workouts"
                Clicked="OnCategoryClicked"/>

        </Grid>
    </ScrollView>

</ContentPage>
